<Alloy>
	<Window class="container">
		<View id="burns_container">
			<ImageView id="burns_image"></ImageView>
		</View>
		<View height="95%" width="95%">
			<View top="10%" layout="vertical" width="Ti.UI.SIZE" height="Ti.UI.SIZE">
				<Label class="text" id="title"/>
				<Label class="text" id="artist_name"/>
				<ImageView id="artist_pic"/>
				<Label class="text" id="year"/>
				<Label class="text" id="period"/>
				<Label class="text" id="media"/>
				<Label class="text" id="teaser"/>
			</View>
			<Button id="close" titleid="CLOSE" onClick="closeWin"></Button>
		</View>
	</Window>
</Alloy>